<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ARRT'EMIS</title>

    <!-- font -->
    <link rel="stylesheet" href="https://use.typekit.net/snx7zgg.css">
    <link rel="stylesheet" href="/assets/style/product.css">
    <link rel="stylesheet" href="/assets/style/common.css">
    <!-- icon -->
    <script src="https://kit.fontawesome.com/0f0c6f90bb.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="wrapper">
        <div class="header">

            <div class="header-logo-part">
                <a href="/"> <img src="/images/폰트LOGO.png" alt="ARRT`EMIS FONT LOGO"></a>
            </div>
            
            <div class="nav">
                <div class="nav-item portal"><i class="fab fa-instalod"></i></div>
                <div class="nav-item instagram">
                    <a href="https://www.instagram.com/arrtemis__official/" target="_blank"><i class="fab fa-instagram"></i></a>
                </div>
                <div class="nav-item community">
                    <label for="community-menu">community</label>
                    <ul name="community-menu" class="community-menu hidden">
                        <li class="community-menu-item"><a href="/notice">notice</a></li>
                        <li class="community-menu-item"><a href="#">Q&A</a></li>
                    </ul>
                </div>
                <div class="nav-item search">search</div>
            </div>

        </div>
    
        <div class="main-section">

            <div class="main-menu-part">
                <div class="main-item title">about.</div>
                <div class="main-item all-items"><a href="/products">allItems.</a></div>
                <div class="main-item top"><a href="/products?category=top">tops.</a></div>
                <div class="main-item hats"><a href="/products?category=hats">hats.</a>.</div>
                <div class="main-item others"><a href="/products?category=others">others.</a></div>
                <div class="main-item archive">
                    <label for="archive-menu" class="archive-menu-label">archive.</label>
                    <ul name="archive-menu" class="archive-menu hidden">
                        <li class="archive-menu-item"><a href="/archives/lookbook">lookbook</a></li>
                        <li class="archive-menu-item"><a href="#">videos</a></li>
                    </ul>
                </div>
            </div>
<!-- pagination needed-->
            <div class="main-product-part">
                <div class="product-grid-container">

                    <% for (let item of products) { %>
                    <div class="each-product">
                        <a href="/products/<%= item._id %>">
                            <img 
                            class="each-product-img" 
                            src= "http://localhost:3000/images/productImage/<%= item.totalImages[0]['name'] %>" 
                            alt="product thumbnail"
                            width="232"
                            height="316"
                            >
                        </a>
                        <div class="each-product-name"><%= item.name %></div>
                    </div>
                    <% } %>

                </div>
                <div class="pagination-button-set">
                    <!-- page location and add query string (?page='') -->
                    <button class="prevBtn"><i class="fas fa-chevron-left total_prev_icon"></i></button>
                    <button class="nextBtn"><i class="fas fa-chevron-right total_next_icon"></i></button>
                </div>
            </div>
        </div>
    
        <div class="footer">

            <div class="footer-information">
                <div class="footer-item stores">stores</div>
                <div class="footer-item contact">contact</div>
                <div class="footer-item shipping-return">shippingAndReturn</div>
                <div class="footer-item policy">policy</div>
                <div class="footer-item copyright">copyright</div>
            </div>

        </div>  
    </div>

    <script src="/assets/js/index.js"></script>
    <script src="/assets/js/productAll.js"></script>
</body>

</html>