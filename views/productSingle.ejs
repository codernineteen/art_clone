<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ARRT'EMIS</title>

    <!-- font -->
    <link rel="stylesheet" href="https://use.typekit.net/snx7zgg.css">
    <link rel="stylesheet" href="/assets/style/product-detail.css">
    <!-- bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>

<body>

    <div class="wrapper">
        <div class="header">

            <div class="header-logo-part">
                <img src="/images/폰트LOGO.png" alt="ARRT`EMIS FONT LOGO">
            </div>
            
            <div class="nav">
                <div class="nav-item portal">portal</div>
                <div class="nav-item instagram">instagram</div>
                <div class="nav-item community">community</div>
                <div class="nav-item search">search</div>
            </div>

        </div>
    
        <div class="main-section">
            <!-- carousel-->
            <div class="main-fitting-part">
                <img 
                    src="/images/productImage/<%= product.partImages[0]['name'] %>" 
                    alt="fitting shot"
                    width= "105"
                    height= "141"
                >
            </div>

            <!-- carousel-->
            <div class="carousel-wrapper">
                <div class="main-product-img-part carousel">
                    <% for (let item of product.totalImages) { %>
                        <img 
                            src="/images/productImage/<%= item['name'] %>" 
                            alt="fitting shot"
                            width= "738"
                            height= "783"
                            class="main-product-img"
                        >
                    <% } %>
                </div>
                <button class="prev">prev</button>
                <button class="next">next</button>
            </div>

            <div class="main-product-options-part">
                <div class="product-name"><%= product.name %></div>
                <div class="product-material"><%= product.material %></div>
                <div class="product-design"><%= product.design %></div>
                <div class="product-color"><%= product.color %></div>
                <div class="product-size"><%= product.size %></div>
                <div class="product-price">
                    <%= product.price %>
                </div>
                <div class="buy-link">
                    <input type="button" value="buy">
                </div>
                <div class="product-size-guide">fitting size guide</div>
                <div class="product-policy">return & exchange</div>
            </div>

        </div>
        
        <div class="related-section">
            related product
        </div>

        <div class="footer">

            <div class="footer-information">
                <div class="footer-item stores">stores</div>
                <div class="footer-item contact">contact</div>
                <div class="footer-item shipping-return">shippingAndReturn</div>
                <div class="footer-item policy">policy</div>
                <div class="footer-item copyright">copyright</div>
            </div>

        </div>  
    </div>

    <script src="/assets/js/carousel.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>